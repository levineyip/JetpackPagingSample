<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="FeedItemBinding" />

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding"
            android:paddingTop="@dimen/padding">

            <com.an.paginglibrary.sample.view.CircleImageView
                android:id="@+id/item_profile_img"
                android:layout_width="@dimen/item_feed_profile_size"
                android:layout_height="@dimen/item_feed_profile_size"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_placeholder" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_toEndOf="@+id/item_profile_img">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_xmedium" />


                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/font_small" />


            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin"
            android:lineSpacingExtra="2dp"
            android:paddingStart="@dimen/padding"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_xmedium"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_image_height"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_small"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_large"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_large"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_likes"
                android:layout_width="@dimen/image_like_width"
                android:layout_height="@dimen/image_like_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_reaction" />


            <TextView
                android:id="@+id/item_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:layout_toEndOf="@+id/img_likes"
                android:text="170"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/font_small" />


            <TextView
                android:id="@+id/item_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginTop="-2dp"
                android:text="1.6K Comments"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/font_small" />


            <TextView
                android:id="@+id/item_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:text="50K Shares"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/font_small" />


        </RelativeLayout>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:background="@color/color_line" />

    </LinearLayout>
</layout>